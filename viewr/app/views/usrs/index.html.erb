<% @title = "Current Users" %>
<div class="row">
  <div class="span8">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <td>Username</td>
          <td>Super?</td>
          <td>Actions</td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.is_superadmin ? "Yes" : "No" %></tD>
            <td>
              <a class="btn btn-warning" href="<%= edit_usr_path(user)
                %>">Change password</a>
              <a class="btn btn-danger" data-method="delete" href="<%= usr_path(user)
                %>" data-confirm="Are you sure you want to delete this user?">Delete user</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <a class="btn btn-primary" href="<%= new_usr_path
      %>">Create user</a>
  </div>
</div>
